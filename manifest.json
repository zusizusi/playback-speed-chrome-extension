{
  "name": "Video Speed Controller",
  "version": "1.0.3",
  "manifest_version": 3,
  "description": "Extension to change video playback speed",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["storage"],
  "icons": {
    "16": "/icons/icon16.png",
    "48": "/icons/icon48.png",
    "128": "/icons/icon128.png"
  }
}
